{% extends 'base.html.twig' %}

{% block body %}
    <h1>Score</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ score.id }}</td>
            </tr>
            <tr>
                <th>Nombrebuts</th>
                <td>{{ score.nombreButs }}</td>
            </tr>
            <tr>
                <th>Typevictoire</th>
                <td>{{ score.typeVictoire }}</td>
            </tr>
            <tr>
                <th>Bonus</th>
                <td>{{ score.bonus }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ score.points }}</td>
            </tr>
            <tr>
                <th>Nombrebutscontre</th>
                <td>{{ score.nombreButsContre }}</td>
            </tr>
            <tr>
                <th>Forfait</th>
                <td>{{ score.forfait }}</td>
            </tr>
            <tr>
                <th>Gagnantpenalty</th>
                <td>{{ score.gagnantPenalty }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scores_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('scores_edit', { 'id': score.id }) }}">Editer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
