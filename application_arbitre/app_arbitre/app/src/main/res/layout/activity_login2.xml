<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hubert.app_arbitre.MainActivity"
    android:background="@drawable/login_background5">

    <!-- Login progress -->

    <LinearLayout
        android:background="#FF7F50"
        android:layout_height="fill_parent"
        android:layout_weight="10000"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Team A"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:id="@+id/textView2" />

        <TextView
            android:id="@+id/goals_teamA"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/goals_teamA"
            android:textColor="#000000"
            android:textSize="45sp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:onClick="addGoalForTeamA"
            android:text="+1 But"
            android:id="@+id/button4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:onClick="addFoulForTeamA"
            android:text="-1 But"
            android:id="@+id/button" />
    </LinearLayout>

        <Chronometer
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/chronometer"
            android:text="Large Text"
            android:textColor="#000000"
            android:textSize="100dp"
            android:layout_centerVertical="true"/>



            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_weight="0.2"
                android:hint="Compte"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:hint="Mot de Passe"
                android:layout_weight="0.2"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />


        <Button
            android:id="@+id/email_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:textStyle="bold"
            android:elevation="0dp" />

    <LinearLayout
        android:background = "#77B5FE"
        android:layout_height="fill_parent"
        android:layout_weight="10000"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Team B"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:id="@+id/textView" />


        <TextView
            android:id="@+id/goals_teamB"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/goals_teamB"
            android:textColor="#000000"
            android:textSize="45sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:onClick="addGoalForTeamB"
            android:text="+1 But"
            android:layout_weight="0.2"
            android:id="@+id/button2" />

        <Button
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:onClick="addFoulForTeamB"
            android:text="-1 But" />

    </LinearLayout>


    </LinearLayout>
