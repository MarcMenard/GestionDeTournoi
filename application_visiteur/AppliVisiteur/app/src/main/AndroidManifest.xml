<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marcmenard.applivisiteur">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applivisiteur_icone"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoTitleBar">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".accueil_classement"
            android:screenOrientation="portrait"/>
        <activity android:name=".planning_general"
            android:screenOrientation="portrait"/>
        <activity android:name=".JSON_Planning"
            android:screenOrientation="portrait"/>
        <activity android:name=".JSON_Classement"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>